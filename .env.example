# GitHub Repository Path (username/repo)
NOTES_REPO_PATH=username/notes-repo

# GitHub Personal Access Token (repo scope required)
NOTES_PAT=your_github_pat_here

# OpenAI Configuration (Fia Copilot)
VITE_OPENAI_BASE_URL=https://api.openai.com/v1
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_MODEL=gpt-5

# Password Protection Configuration
# Enable AI password protection (default: false)
# If set to false, password protection is disabled even if password.fianotes exists.
VITE_ENABLE_AI_PASSWORD=false

# Enable password hashing support (default: false)
# If true, the system expects the password in password.fianotes to be a SHA-256 hash.
# If false, the system expects the password to be plain text.
VITE_ENABLE_HASH_PASSWORD=false
